version: '3.6'

services:
  yada:
    build: https://raw.githubusercontent.com/pdxwebdev/yadacoin/master/docker/serve/Dockerfile
    ports: 
      - 8002:8000
    environment:
      - PYTHONUNBUFFERED=0
    volumes:
      - ./config:/config
    depends_on:
      - mongodb
  mongodb:
    image: mongo:latest
    container_name: "mongodb"
    user: "mongodb"
    environment:
      - MONGO_DATA_DIR=/data/db
      - MONGO_LOG_DIR=/dev/null
    volumes:
      - ./data/db:/data/db
      - ./data/logs:/data/logs
    ports:
      - 27017:27017
    command:
      - 'mongod'
      - '--logpath'
      - '/data/logs/logs.log'
